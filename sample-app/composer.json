{
    "name": "allscreenshots/sample-app",
    "description": "Sample application demonstrating the Allscreenshots PHP SDK",
    "type": "project",
    "license": "Apache-2.0",
    "require": {
        "php": "^8.1",
        "allscreenshots/sdk": "@dev",
        "slim/slim": "^4.14",
        "slim/psr7": "^1.7",
        "php-di/php-di": "^7.0",
        "slim/twig-view": "^3.4",
        "vlucas/phpdotenv": "^5.6"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "repositories": [
        {
            "type": "path",
            "url": "../"
        }
    ],
    "scripts": {
        "start": "php -S localhost:8080 -t public"
    }
}
