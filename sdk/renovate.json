{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "schedule": ["before 9am on Monday"],
  "timezone": "UTC",
  "labels": ["dependencies"],
  "rangeStrategy": "pin",
  "packageRules": [
    {
      "description": "Group minor and patch updates",
      "matchUpdateTypes": ["minor", "patch"],
      "groupName": "minor-and-patch",
      "automerge": true,
      "automergeType": "pr",
      "platformAutomerge": true
    },
    {
      "description": "Separate PRs for major updates",
      "matchUpdateTypes": ["major"],
      "automerge": false,
      "labels": ["dependencies", "major"]
    },
    {
      "description": "PHP version updates require manual review",
      "matchPackageNames": ["php"],
      "automerge": false,
      "labels": ["dependencies", "php-version"]
    },
    {
      "description": "Dev dependencies can be automerged",
      "matchDepTypes": ["require-dev"],
      "automerge": true,
      "automergeType": "pr",
      "platformAutomerge": true
    }
  ],
  "vulnerabilityAlerts": {
    "enabled": true,
    "labels": ["security"]
  }
}
