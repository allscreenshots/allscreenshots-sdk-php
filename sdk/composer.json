{
    "name": "allscreenshots/sdk",
    "description": "Official PHP SDK for the Allscreenshots API - capture website screenshots programmatically",
    "keywords": ["allscreenshots", "screenshot", "api", "sdk", "web-capture"],
    "type": "library",
    "license": "Apache-2.0",
    "homepage": "https://github.com/allscreenshots/allscreenshots-sdk-php",
    "authors": [
        {
            "name": "Allscreenshots Team",
            "email": "support@allscreenshots.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "guzzlehttp/guzzle": "^7.10",
        "psr/http-client": "^1.0",
        "psr/http-message": "^2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.5",
        "phpstan/phpstan": "^2.1",
        "friendsofphp/php-cs-fixer": "^3.92"
    },
    "autoload": {
        "psr-4": {
            "Allscreenshots\\Sdk\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Allscreenshots\\Sdk\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test:unit": "phpunit --testsuite=unit",
        "test:integration": "phpunit --testsuite=integration",
        "lint": "php-cs-fixer fix --dry-run --diff",
        "lint:fix": "php-cs-fixer fix",
        "analyze": "phpstan analyse"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "phpstan/extension-installer": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
